local player = game.Players.LocalPlayer
local originalSize = Vector3.new(2.5703413486480713, 5.7297587394714355, 2.063832998275757)
local newSize = Vector3.new(originalSize.X + 50, originalSize.Y + 50, originalSize.Z + 100)

local function maintainHitboxSize(character, size)
    local tackleHitbox = character:FindFirstChild("TackleHitbox")
    if tackleHitbox then
        tackleHitbox.Size = size
        tackleHitbox.CFrame = tackleHitbox.CFrame * CFrame.new(0, (size.Y - originalSize.Y) / 2, 0)
        while tackleHitbox do
            wait(0.5)
            tackleHitbox.Size = size
        end
    end
end

local function enableBigHitbox()
    if player.Character then
        maintainHitboxSize(player.Character, bigSize)
    end
end

local function disableBigHitbox()
    if player.Character then
        maintainHitboxSize(player.Character, originalSize)
    end
end

-- Return a table of functions
return {
    enableBigHitbox = enableBigHitbox,
    disableBigHitbox = disableBigHitbox
}
